<tal:block metal:use-macro="macros.tal/page">
	<tal:block metal:fill-slot="content">
		<tal:block repeat="chunk php: array_chunk(widgets, 3)">
			<div class="row-fluid">
				<tal:block repeat="widget chunk">
					<div class="well span4">
						<p class="widget-header" name="#${widget/name}">${widget/name}</p>
						<div>
							<tal:block content="structure widget/content" />
						</div>
					</div>
				</tal:block>
			</div>
		</tal:block>
	</tal:block>
</tal:block>
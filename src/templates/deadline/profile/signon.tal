<tal:block metal:use-macro="page-defaults.tal/content-page">
	<tal:block metal:fill-slot="content">
		<div tal:condition="failed | nothing" id="login-failed" class="signin-error alert alert-error">
			<button type="button" class="close" data-dismiss="alert">x</button>
			Either your username or password was invalid!
		</div>
		<tal:block metal:use-macro="macros.tal/signon-box" />
	</tal:block>
</tal:block>
